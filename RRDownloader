args = {...}

local overwrite = true

function checkVersion(dir, file)
  -- Todo
  return false
end

function validate(dir, file)
  if(not fs.exists(dir)) then
    fs.makedir(dir)
    return true
  elseif(not fs.exists(dir .. "/" .. file))
    return true
  elseif(not checkversion)
    fs.delete(dir .. "/" .. file)
    return true
  elseif(overwrite)
    fs.delete(dir .. "/" .. file)
    return true
  else
    return false
  end
end

function downloadPaste(paste, name, dir)
  return shell.run("pastebin", get", paste, dir .. "/" .. name)
end

function downloadGit(user, repo, file, name, dir)
  temp = http.get("https://raw.github.com/" .. user .. "/" .. repo .. "/" .. file)
end
